<%= form_for(@feature) do |f| %>
  <% if @feature.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@feature.errors.count, "error") %> prohibited this feature from being saved:</h2>

      <ul>
      <% @feature.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :copy %><br>
    <%= f.text_area :copy %>
  </div>
  <div class="field">
    <%= f.label :brand_id %><br>
    <%= f.select :brand_id, options_for_select(@brands.map { |brand| [brand.name, brand.id]}, @feature.brand_id), prompt: "Please Select" %>
  </div>
  <div class="field">
    <%= f.label :store_id %><br>
    <%= f.select :store_id, options_for_select(@stores.map { |store| [store.name, store.id]}, @feature.store_id), prompt: "Please Select" %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br>
    <%= f.select :category_id, options_for_select(@categories.map { |cat| [cat.name, cat.id]}, @feature.category_id), prompt: "Please Select" %>
  </div>
  <div class="field">
    <%= f.label :sub_category_id %><br>
    <%= f.select :sub_category_id, options_for_select(@sub_categories.map { |sub_cat| [sub_cat.name, sub_cat.id]}, @feature.sub_category_id), {prompt: "Please Select"} %>
  </div>
  <div class="field">
    <%= f.label :search_string %><br>
    <%= f.text_field :search_string %>
  </div>
  <div class="field">
    <%= f.label :gender_id %><br>
    <%= f.text_field :gender_id %>
  </div>
  <div class="field">
    <%= f.label :image_url %><br>
    <%= f.text_field :image_url %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
