<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :rrp %><br>
    <%= f.number_field :rrp, :step => 0.01 %>
  </div>
  <div class="field">
    <%= f.label :sale_price %><br>
    <%= f.number_field :sale_price, :step => 0.01 %>
  </div>
  <div class="field">
    <%= f.label :brand_id %><br>
    <%= f.select :brand_id, options_for_select(@brands.map { |brand| [brand.name, brand.id]}, @product.brand_id), prompt: "Please Select" %>
  </div>
  <div class="field">
    <%= f.label :store_id %><br>
    <%= f.select :store_id, options_for_select(@stores.map { |store| [store.name, store.id]}, @product.store_id), prompt: "Please Select" %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br>
    <%= f.select :category_id, options_for_select(@categories.map { |cat| [cat.name, cat.id]}, @product.category_id), prompt: "Please Select" %>
  </div>
  <div class="field">
    <%= f.label :sub_category_ids %><br>
    <%= f.select :sub_category_id, options_for_select(@sub_categories.map { |sub_cat| [sub_cat.name, sub_cat.id]}, @product.sub_category_id), {prompt: "Please Select"}, {multiple: true} %>
  </div>
  <div class="field">
    <%= f.label :color_ids %><br>
    <%= f.select :color_ids, options_for_select(@colors.map { |color| [color.name, color.id]}, @product.color_ids), {prompt: "Please Select"}, {multiple: true} %>
  </div>
  <div class="field">
    <%= f.label :trend_ids %><br>
    <%= f.select :trend_ids, options_for_select(@trends.map { |trend| [trend.name, trend.id]}, @product.trend_ids), {prompt: "Please Select"}, {multiple: true} %>
  </div>
  <div class="field">
    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label :image_url %><br>
    <%= f.text_field :image_url %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :gender %><br>
    <%= f.text_field :gender %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
